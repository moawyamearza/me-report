{% extends "base.html.twig" %}

{% block title %}Card{% endblock %}

{% block content %}
<div class="navbar">
            <nav>
                <ul>
                    <li><a href="{{ url("deck") }}">Deck</a></li>
                    <li><a href="{{ url("shuffle") }}">Shuffle</a></li>
                    <li><a href="{{ url("draw") }}">Draw</a></li>
                    <li><a href="{{ link_to_drawnum }}">Draw Number</a></li>
                    <li><a href="{{ link_to_deal }}">Deal</a></li>
                    <li><a href="{{ url("deck2") }}">Deck2</a></li>
                </ul>
            </nav>
</div>


<div class = "game-board">


<form method="post">
    
    

    <p>
        <input class="button" type="submit" name="start" value="Start">
        <input class="button" type="submit" name= "draw" value="Draw">
        
        
    </p>

    

    
</form>


{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% if label == "info" %}
            <div class="{{ label }}" style="color:{{color}}">
                {{ message }}
            </div>
        {% endif %}
        {% if label == "warning" %}
            <div class="{{ label }}">
                {{ message }}
            </div>
        {% endif %}   
    {% endfor %}
{% endfor %}

</div>





    

{% endblock %}