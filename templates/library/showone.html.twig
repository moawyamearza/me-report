
{% extends 'base.html.twig' %}

{% block title %}{{ books.bookname }}{% endblock %}

{% block content %}
<div class="navbar">
            <nav>
                <ul>
                    <li><a href="{{ url("app_library") }}">Home</a></li>
                    <li><a href="{{ url("book_new") }}">Creat Book</a></li>
                    <li><a href="{{ url("library_show_all_books") }}">Show All Books</a></li>
                </ul>
            </nav>
</div>
<div class="book-details">
    <h1>{{ books.bookname }}</h1>
    <p><strong>ISBN:</strong> {{ books.isbn }}</p>
    <p><strong>Author:</strong> {{ books.writer }}</p>
        {% if books.image %}
            <p><strong>Cover:</strong></p>
            <img src="{{ books.image }}" alt="{{ books.bookname }} cover">
        {% else %}
            <p>No cover image available</p>
        {% endif %}

    <div class="book-actions">
        <a href="{{ path('library_edit', {'id': books.id}) }}">Edit</a>
        <form method="post" action="{{ path('library_delete', {'id': books.id}) }}">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ books.id) }}">
            <button type="submit">Delete</button>
        </form>
    </div>
</div>
{% endblock %}
